{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["es2017", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": false,
    "paths": {
      "track": ["src/components"],
      "atoms": ["src/components/atoms"],
      "particles": ["src/components/particles"]
    },
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": false,
    "target": "es5",
    "types": ["node", "react", "react-youtube"]
  },
  "exclude": ["node_modules"],
  "include": ["src", "index.d.ts"]
}
